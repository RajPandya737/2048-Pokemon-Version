<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/leafbg">
    <!--This is the leaf battle, and like its java file, it is similar to all the other files, the only difference being its images-->
  <!--At the top there is a text view to give a hint to the user for what to do-->
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on the ball to catch the pokemon!"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="25dp"/>
    <!--There is a pokeball to click on-->
    <ImageView
        android:id="@+id/ball"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ball"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:onClick="throwball"/>
    <!--The relative layout helps keep the image at the bottom of the page-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/battle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/s1"/>
    </RelativeLayout>
</LinearLayout>